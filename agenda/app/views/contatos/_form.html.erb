<%= form_for(@contato) do |f| %>
  <% if @contato.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contato.errors.count, "error") %> houve um erro e este contato nao pode ser salvo:</h2>

      <ul>
      <% @contato.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :telefone %><br />
    <%= f.text_field :telefone %>
  </div>
  <%= f.fields_for :endereco do |endereco_fields| %>
    <div class="field">
      <%= endereco_fields.label :nome %><br />
      <%= endereco_fields.text_field :nome %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit  %>
  </div>
<% end %>